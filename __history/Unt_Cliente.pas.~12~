    cdsClienteRAZAOSOCIAL: TStringField;
    cdsClienteCNPJ: TStringField;
    cdsClienteDDD: TStringField;
    cdsClienteTELEFONE: TStringField;
    dtsCliente: TDataSource;
    PnlTop: TPanel;
    PnlProdutos: TPanel;
