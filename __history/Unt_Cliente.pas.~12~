  TFrmClientes = class(TForm)
    PageCentro: TPageControl;
    TsConsulta: TTabSheet;
    GridFornecedor: TDBGrid;
    sqlCliente: TSQLDataSet;
    dspCliente: TDataSetProvider;
    cdsCliente: TClientDataSet;
    cdsClienteID: TIntegerField;
